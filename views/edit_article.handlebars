<div class="container">
  <h1>{{title}}</h1>
  <div class="row center">
    <form method="POST" action="/article/edit/{{id}}" class="col s12">
      <div class="row">
        <div class="input-field col s6 m10">
          <i class="material-icons prefix">title</i>
          <input name="title" type="text" class="validate" value="{{title}}">
          <label for="title">Title</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6 m10">
          <i class="material-icons prefix">account_circle</i>
          <input name="author" type="text" class="validate" value="{{article.author}}">
          <label for="author">Author</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6 m10">
          <i class="material-icons prefix">mode_edit</i>
          <textarea name="body" class="materialize-textarea"></textarea>
          <label for="body">Textarea</label>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </form>
  </div>
</div>